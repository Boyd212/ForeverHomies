{
    "env": {
        "browser": true,
        "es6": true,
        "jest": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2023,
        "sourceType": "module"
    },
    "extends": [
        "plugin:react/recommended"
    ],
    "plugins": [
        "react"
    ],
    "rules": {
        "react/jsx-filename-extension": [
            "warn",
            {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        ],
        "import/no-unresolved": "off",
        "no-shadow": "off",
        "arrow-parens": [
            "error",
            "as-needed"
        ]
    },
    "ignorePatterns": [
        "dist/",
        "build/"
    ]
}